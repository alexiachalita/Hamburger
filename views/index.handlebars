<h1>Hamburgers</h1>


<ul>
  {{#each hamburgers}}
      {{> hamburgers/hamburgers-block }}
  {{/each}}
</ul>


<h2>Add a Hamburger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Hamburger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured<br>
    <input type="radio" name="devour" value="0"> Un-devoured
  </div>

  <button type="submit">Add Hamburger</button>
</form>
